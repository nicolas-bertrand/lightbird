<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contexts>
    <context>
      <transport>TCP</transport>
      <protocol>HTTP</protocol>
    </context>
  </contexts>
  <!-- The maximum size of the header. After that, an error is sent to the client, and it is disconnected. -->
  <maxHeaderSize>1000000</maxHeaderSize>
  <!-- The maximum size send at a time to the client. -->
  <maxPacketSize>10000000</maxPacketSize>
  <!-- The maximum content size to store in the memory. Above that, it is stored in a temporary file. -->
  <maxContentInMemory>1000000</maxContentInMemory>
  <!-- The name of the methods that can have a content in the request. -->
  <methodContent>
    <POST />
  </methodContent>
</configuration>
