<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contexts>
    <context>
      <mode>Server</mode>
      <transport>TCP</transport>
      <protocol>TLS</protocol>
    </context>
  </contexts>
  <!-- The name of the self-signed certificate used to authenticate the server. -->
  <cert>cert.pem</cert>
  <!-- The name of the private key file, used to sign the certificate.
       This file must not be keeped secret. -->
  <key>key.pem</key>
  <!-- The name of the file that will store the dh_params. The security level
       is inserted before the extension (dh_params.hight.pem). -->
  <dh_params>dh_params.pem</dh_params>
  <!-- The security level of the DH params (GNUTLS_SEC_PARAM_*) -->
  <sec_param>HIGH</sec_param>
  <!-- The expiration of the DH params in days. -->
  <dh_params_expiration>90</dh_params_expiration>
  <!-- The maximum duration of the handshake in milliseconds. -->
  <handshake_timeout>5000</handshake_timeout>
</configuration>
