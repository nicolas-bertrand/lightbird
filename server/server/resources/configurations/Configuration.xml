<?xml version='1.0' encoding='UTF-8'?>
<configuration>
  <name></name>
  <pluginsPath>plugins</pluginsPath>
  <QtPluginsPath>./QtPlugins</QtPluginsPath>
  <filesPath>files</filesPath>
  <temporaryPath>tmp</temporaryPath>
  <cleanTemporaryPath>true</cleanTemporaryPath>
  <languagesPath>languages</languagesPath>
  <language>fr</language>
  <maxTimers>3</maxTimers>
  <splashScreen>:splashScreen</splashScreen>
  <database>
    <name/>
    <file>server.db</file>
    <path>databases</path>
    <resource>:database</resource>
    <type>QSQLITE</type>
    <password/>
    <user/>
    <host/>
    <port/>
    <options/>
    <pragmas>
      <pragma>PRAGMA recursive_triggers=true</pragma>
      <pragma>PRAGMA synchronous=false</pragma>
    </pragmas>
  </database>
  <permissions>
    <activate>false</activate>
    <default>false</default>
    <inheritance>true</inheritance>
    <ownerInheritance>true</ownerInheritance>
  </permissions>
  <log>
    <level>Trace</level>
    <display>true</display>
    <file>server.log</file>
    <path>logs</path>
    <maxNbOfFile>10</maxNbOfFile>
    <maxSize>1M</maxSize>
    <validityPeriod>30</validityPeriod>
  </log>
  <ports>
    <port protocol="SiTP HTTP WebClient" transport="TCP" maxClients="300">4242</port>
  </ports>
  <plugins>
    <!-- The HTTP parser is used by SiTP, HTTP, and the WebClient -->
    <plugin>HTTP/Authentication</plugin>
    <plugin>HTTP/Get</plugin>
    <plugin>HTTP/Parser</plugin>
    <!-- SiTP -->
    <plugin>SiTP/Database</plugin>
    <plugin>SiTP/Get</plugin>
    <plugin>SiTP/Identification</plugin>
    <plugin>SiTP/Permission</plugin>
    <plugin>SiTP/Plugin</plugin>
    <plugin>SiTP/Preview</plugin>
    <plugin>SiTP/Put</plugin>
    <plugin>SiTP/Server</plugin>
    <plugin>SiTP/Stream</plugin>
    <!-- Content -->
    <plugin>Content/Json</plugin>
    <plugin>Content/Xml</plugin>
    <!-- Extensions -->
    <plugin>Extensions/FFmpeg</plugin>
    <plugin>Extensions/Identifier</plugin>
    <plugin>Extensions/ImageMagick</plugin>
    <plugin>Extensions/Previews</plugin>
    <!--plugin>Extensions/TagLib</plugin-->
    <!-- ClientDesktop -->
    <plugin>ClientDesktop</plugin>
    <!-- WebClient -->
    <plugin>WebClient</plugin>
    <!-- Other -->
    <plugin>Logs/logFile</plugin>
  </plugins>
</configuration>
